<h1>Articles</h1>
<div class="row">
  <% @articles.each do |article| %>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">    	
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.body %></p>
        <%= link_to 'Show', article, class: "btn btn-primary" %>
      </div>
    </div>	
  </div>
  <% end %>
</div>
<%= link_to "New Article", new_article_path %>